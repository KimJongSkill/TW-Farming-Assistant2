{
	"manifest_version": 2,
	
	"name": "Tribal Wars Farming Assistant²",
	"short_name": "TW Farming Assistant²",
	"description": "Automate your Farming Assistant",
	"version": "1.1",
	
	"icons":
	{
		"16": "/res/windmill16.png",
		"48": "/res/windmill48.png",
		"128": "/res/windmill128.png"
	},
	
	"offline_enabled": false,

	"page_action":
	{
		"default_icon":
		{
			"19": "/res/tractor19.png",
			"38": "/res/tractor38.png"
		},
		"default_title": "Send attacks"
	},
	
	"options_ui":
	{
		"page": "/ui/options.html",
		"chrome_style": true
	},
	
	"event_rules":
	[
		{
			"event": "declarativeContent.onPageChanged",
			"conditions":
			[{
				"type": "declarativeContent.PageStateMatcher",
				"pageUrl":
				{
					"pathPrefix": "/game.php",
					"queryContains": "screen=am_farm",
					"schemes": ["https"]
				}
			}],
			"actions": [{"type": "declarativeContent.ShowPageAction"}]
		}
	],
	
	"commands":
	{
		"_execute_page_action":
		{
			"suggested_key": {"default": "Ctrl+Shift+F"},
			"description": "Send attacks"
		}
	},
	
	"background":
	{
		"scripts": ["/js/background.js"],
		"persistent": false
	},
	
	"permissions": 
	[
		"activeTab",
		"declarativeContent",
		"storage"
	]
}
